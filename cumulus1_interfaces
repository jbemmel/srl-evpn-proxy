auto lo
iface lo inet loopback
  address 1.1.1.1/32

# To Cumulus2
auto e1-1
iface e1-1
    address 192.168.0.0/31
    post-up ip route add 1.1.1.2/32 via 192.168.0.1

auto e1-2 # To SRL1
iface e1-2
    address 192.168.0.2/31

auto e1-3 # To H1
iface e1-3
    # Native VLAN 1 untagged
    # bridge-access 1

# Shared bridge: Underlay untagged to VXLAN traffic on VLAN/VNI 10
auto bridge
iface bridge
  bridge-ports e1-3 vni-10
  bridge-vids 1 10
  # Primary VLAN Identifer (PVID), default setting, inherited
  bridge-pvid 1
  bridge-vlan-aware yes

# Use VLAN 10 for VXLAN overlay
auto vni-10
iface vni-10
    bridge-access 10
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10
    vxlan-local-tunnelip 1.1.1.1
    # Cumulus 2
    vxlan-remoteip 1.1.1.2
    bridge-learning on
