# The loopback network interface
auto lo
iface lo inet loopback
    address 1.1.1.1/32

auto swp12
iface swp12 
    address 10.0.0.1/31
    post-up ip route add 1.1.1.11/32 via 10.0.0.0

auto bridge
iface bridge
    bridge-ports vni-10
    bridge-vids 10
    bridge-vlan-aware yes

auto vni-10
iface vni-10
    bridge-access 10
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10
    vxlan-local-tunnelip 1.1.1.1
    vxlan-remoteip 1.1.1.11 # srl1 on swp12
    bridge-learning on
