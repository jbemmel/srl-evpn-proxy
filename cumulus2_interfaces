auto lo
iface lo inet loopback
  address 1.1.1.2/32
  vxlan-local-tunnelip 1.1.1.2

auto mgmt
iface mgmt
    vrf-table auto

auto eth0
iface eth0
    vrf mgmt

auto swp1 # To Cumulus1
iface swp1
    address 192.168.0.1/31
    post-up ip route add 1.1.1.1/32 via 192.168.0.0

auto swp2 # Not connected
iface swp2
    address 192.168.0.3/31

auto swp3 # To H1
iface swp3
    bridge-access 1 # Native VLAN 1 untagged

# Shared bridge: Underlay native VLAN 1 untagged for VXLAN traffic
auto bridge
iface bridge
  bridge-ports swp3 vni-10
  bridge-pvid 1
  bridge-vids 1 10
  bridge-vlan-aware yes

# Use VLAN 10 for VXLAN overlay
auto vni-10
iface vni-10
    bridge-access 10
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10
    vxlan-remoteip 1.1.1.1 # Cumulus1
    bridge-learning on
