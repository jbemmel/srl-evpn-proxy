auto lo
iface lo inet loopback
  address 1.1.0.2/32
  vxlan-local-tunnelip 1.1.0.2

auto e1-1 # To Spine1
iface e1-1
    address 192.168.127.7/31
    post-up ip route add 1.1.0.0/29 via 192.168.127.6

auto e1-2 # To Spine2
iface e1-2
    address 192.168.0.15/31
    post-up ip route add 1.1.0.0/29 via 192.168.0.14

auto e1-3 # To H2
iface e1-3
    # Native VLAN 1 untagged
    bridge-access 10
    bridge-l2protocol-tunnel all

# Shared bridge: Underlay native VLAN 1 untagged for VXLAN traffic
auto bridge
iface bridge
  # Stop STP from going across VXLAN
  # On Cumulus: /usr/share/ifupdown2/addons/mstpctl.py
  mstpctl-portbpdufilter e1-3=yes vni-10=yes
  bridge-stp off

  bridge-ports e1-3 vni-10
  bridge-vids 1 10
  # Primary VLAN Identifer (PVID), default setting, inherited by ports
  bridge-pvid 1
  bridge-vlan-aware yes

# Use VLAN 10 for VXLAN overlay
auto vni-10
iface vni-10
    bridge-access 10
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    bridge-l2protocol-tunnel all
    # 0xaabbcc = 11189196
    vxlan-id 11189196
    # vxlan-local-tunnelip 1.1.0.2
    # Cumulus1
    vxlan-remoteip 1.1.0.1
    # srl1
    vxlan-remoteip 1.1.0.3
    # srl2
    vxlan-remoteip 1.1.0.4
    # bridge-learning on # Cumulus complains about conflict with EVPN?
